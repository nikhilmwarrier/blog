---
title: Niklogs
changeFreq: daily
pagination:
  data: collections.posts
  size: 5
  alias: posts
permalink: "./{% if pagination.pageNumber > 0 %}/pages/{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="google-site-verification" content="EWJR1uI6RMmp_IV5pJkW4yIL8_H-A0m4FZQyfcy9P4w" />
		{% if pagination.pageNumber > 0 %}
  		<link rel="stylesheet" href="../../static/prism/prism.css" />
  		<link rel="stylesheet" href="../../static/styles.css">
		{% else %}
			<link rel="stylesheet" href="static/prism/prism.css" />
			<link rel="stylesheet" href="static/styles.css">
		{% endif %}
		  <!-- RSS feeds -->
		  <link rel="alternate" href="https://nikhilmwarrier.github.io/blog/feed.xml" type="application/atom+xml" 
		    title="niklogs | nikhilmwarrier">
		<title>{{ title }}</title>
		
		{% if pagination.pageNumber > 0 %}
		  <!--[if lt IE 9]>
			  <script src="../../js/html5shiv.js"></script>
			<![endif]-->
		{% else %}
		  <!--[if lt IE 9]>
			  <script src="js/html5shiv.js"></script>
			<![endif]-->
		{% endif %}
		
		
		{% if pagination.pageNumber > 0 %}
		  <script src="../../prism/prism.js" defer></script>
		  <script src="../../static/js/app.js" defer></script>
		{% else %}
			<script src="./prism/prism.js" defer></script>
			<script src="static/js/app.js" defer></script>
		{% endif %}
		
	</head>
	<body id="top">
		{% include navbar %}
		<main>
			{% for post in posts reversed %}
			  <div class="post" onclick="window.location.href = '{{ site.url }}/{{ post.url }}'">
			  {% if post.data.cover-image-alt-text %}
			  		<img src="{{ site.url }}/{{ post.data.cover-image | url }}" alt="{{ post.data.cover-image-alt-text }}">
			  {% else %}
			    <img loading="lazy" src="{{ site.url }}/{{ post.data.cover-image | url }}" alt="Post Preview Image">
			  {% endif %}
			  	<div class="content">	
			  		<h2>{{ post.data.title }}</h2>
			  		<p>
			  			{{ post.data.snippet }} <br />
			  			<a href="{{ site.url }}/{{ post.url }}">Read More</a>
			  			<br />
			  			<em class="post-date">{{ post.date | date: "%b %d, %Y" }}</em>
			  		</p>
			  	</div>
			  </div>
			{% endfor %}
			
			<div class="pagination">
			  {% if pagination.href.previous %}
			    <a href="{{ site.url }}/{{pagination.href.previous}}">Previous Page</a>
			  {% endif %}
			  {% if pagination.href.next %}
			    <a href="{{ site.url }}/{{pagination.href.next}}">Next Page</a>
			  {% endif %}
			</div>
		</main>
		{% include footer %}
	</body>
</html>
